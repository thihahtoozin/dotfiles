syntax on                                            
set t_Co=256
colorscheme default "industry "koehler

set number
set relativenumber

set nowrap           " disable line wrapping set set wrap

set tabstop=4
set shiftwidth=4
set expandtab

set autoindent
set smartindent

set hlsearch
set incsearch

set ruler
set laststatus=2

set mouse=a
set clipboard=unnamedplus "integrates vim with thesystem clipboard

set cursorline
set showmatch "Highlingts the matching brackets
set wildmenu "display choices in menu style interface
set scrolloff=8 "keep 8 line visible above and below the cursor

set noswapfile "disable swap files
set updatetime=300 "300 milliseconds

set belloff=all
